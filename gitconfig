#
# ~/.gitconfig
#

[user]
	name = Erik Hasse
	email = erik.g.hasse@gmail.com
[core]
	editor = nvim
[merge]
	tool = nvim -d
[color]
	ui = true
[alias]
	c = commit
	s = status
	b = branch
	d = diff
	a = add
	ch = checkout
	l = log
	dc = diff --cached
	h = help
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[grep]
	lineNumber = true
[push]
	default = simple
[github]
	user = erik-hasse
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[commit]
	verbose = true
